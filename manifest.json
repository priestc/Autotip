{
   "background": {
      "scripts": [ "background.js" ]
   },
   "content_scripts": [ {
      "js": [ "jquery-2.1.3.min.js", "bitcoinjs.min.js",  "microtip.js" ],
      "matches": [ "<all_urls>" ]
   } ],
   "options_page": "options.html",
   "description": "Send microtips to pages you visit.",
   "icons": {
      "128": "black-logo-128.jpg"
   },
   "manifest_version": 2,
   "name": "Microtip Extension",
   "page_action": {
      "default_icon": {
         "38": "orange-bitcoin-38.png"
      },
      "default_title": "Microtip address found on this page."
   },
   "permissions": [
      "storage"
   ],
   "version": "1.0",
   "web_accessible_resources": [ "*.png" ]
}
